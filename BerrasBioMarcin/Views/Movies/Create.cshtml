@model BerrasBioMarcin.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieTitleName" class="control-label"></label>
                <input asp-for="MovieTitleName" class="form-control" />
                <span asp-validation-for="MovieTitleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieReleaseDate" class="control-label"></label>
                <input asp-for="MovieReleaseDate" class="form-control" />
                <span asp-validation-for="MovieReleaseDate" class="text-danger"></span>
            </div>
            <div >
                <label class="form-label" for="GenresId">Choose genre: </label>
            <select name="GenresId" class="form-select">

                <option selected>Choose the genre: </option>

                @for (int i = 0; i < ViewBag.Genres.Count; i++){
                    <option asp-for="GenresName" value="@ViewBag.Genres[i].GenresId">@ViewBag.Genres[i].GenresName </option>
                    }
                </select>
                <span asp-validation-for="GenresId" class="text-danger"></span>

            @*Html.DropDownList("Genres", new SelectList(ViewBag.Genres, "GenresId", "GenresName", new { @class = "form-select"}))*@
            </div>
            <div>
                <label class="form-label" for="MovieImageUrl">Movie Image</label>
                <input type="file" class="form-control" id="file1" name="file1" />

            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
