@model BerrasBioMarcin.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AmountSeats" class="control-label"></label>
                <input asp-for="AmountSeats" class="form-control" />
                <span asp-validation-for="AmountSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowsID" class="control-label"></label>
                <select asp-for="ShowsID" class ="form-control" asp-items="ViewBag.ShowsID"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BookingCanceled" /> @Html.DisplayNameFor(model => model.BookingCanceled)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
