@model IEnumerable<BerrasBioMarcin.Models.Salon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSpace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cinema)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSpace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cinema.CinemaID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
