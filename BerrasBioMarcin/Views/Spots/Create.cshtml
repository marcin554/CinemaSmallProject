@model BerrasBioMarcin.Models.Spot

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Spot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <p>You create all the spots with the amount of the slots in Salon.</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SpotIsTaken" /> @Html.DisplayNameFor(model => model.SpotIsTaken)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SalonId" class="control-label"></label>
                <select asp-for="SalonId" class ="form-control" asp-items="ViewBag.SalonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ShowId" class="control-label"></label>
                <select asp-for="ShowId" class ="form-control" asp-items="ViewBag.ShowId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
