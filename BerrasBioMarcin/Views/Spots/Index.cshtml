@model IEnumerable<BerrasBioMarcin.Models.Spot>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpotIsTaken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shows)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpotIsTaken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salon.SalonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shows.ShowID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpotID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpotID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpotID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
